  "version": "0.2.0",
  "configurations": [
      {
          "type": "lldb",
          "request": "launch",
          "name": "Debug executable 'rustish'",
          "cargo": {
              "args": [
                  "build",
                  "--bin=rustish",
                  "--package=rustish"
              ],
              "filter": {
                  "name": "rustish",
                  "kind": "bin"
              }
          },
          "args": [],
          "cwd": "${workspaceFolder}"
      },
      {
          "type": "lldb",
          "request": "launch",
          "name": "Debug unit tests in executable 'rustish'",
          "cargo": {
              "args": [
                  "test",
                  "--no-run",
                  "--bin=rustish",
                  "--package=rustish"
              ],
              "filter": {
                  "name": "rustish",
                  "kind": "bin"
              }
          },
          "args": [],
          "cwd": "${workspaceFolder}"
      }
  ]
}